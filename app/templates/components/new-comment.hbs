{{#if addNewComment}}
<h3>Leave your reply here!</h3>
  <div class="answers">
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="answer">Answer</label>
        {{input value=answer id="answer"}}
      </div>
      <button class= "btn" {{action 'saveComment'}}>Submit</button>
    </form>
  </div>
{{else}}
  <br><button class= "btn" {{action 'commentFormShow'}}>Answer Here!</button>
{{/if}}
