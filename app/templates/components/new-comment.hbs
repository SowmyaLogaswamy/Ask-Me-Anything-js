{{#if addNewComment}}
<h1>New Comment</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="answer">Answer</label>
        {{input value=answer id="answer"}}
      </div>
      <button {{action 'saveComment'}}>Submit</button>
    </form>
  </div>
{{else}}
  <br><button {{action 'commentFormShow'}}>Answer Here!</button>
{{/if}}
