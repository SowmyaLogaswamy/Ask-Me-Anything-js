{{#if addNewPost}}
<h1>Create your question here!</h1>
<div class="questions">
  <form>
    <div class="form-group">
      <label for="author">Your Name</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="question">Question</label>
      {{input value=question id="question"}}
    </div>
    <div class="form-group">
      <label for="note">Notes</label>
      {{input value=note id="note"}}
    </div>
    <button class= "btn" {{action 'savePost1'}}>Submit</button>
  </form>
</div>
{{else}}
  <button class="btn" {{action 'postFormShow'}}>Ask a Question!</button>
{{/if}}
